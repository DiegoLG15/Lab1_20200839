<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#BAD5D2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:gravity="center"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/antena"
            android:layout_width="294dp"
            android:layout_height="410dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/antenna_sinfondo" />

        <ImageView
            android:id="@+id/cabeza"
            android:layout_width="181dp"
            android:layout_height="137dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="1dp"
            android:paddingStart="116dp"
            android:paddingTop="72dp"
            app:srcCompat="@drawable/head1_sinfondo"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/cuerpo"
            android:layout_width="136dp"
            android:layout_height="288dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="7dp"
            android:paddingStart="120dp"
            android:paddingTop="53dp"
            app:srcCompat="@drawable/torso_sinfondo"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/brazoIzq"
            android:layout_width="153dp"
            android:layout_height="127dp"
            android:layout_marginStart="166dp"
            android:layout_marginTop="70dp"
            android:paddingStart="100dp"
            android:paddingTop="60dp"
            app:srcCompat="@drawable/brazoizq_piernadere_sinfondo"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/brazoDer"
            android:layout_width="170dp"
            android:layout_height="142dp"
            android:layout_marginStart="193dp"
            android:layout_marginTop="64dp"
            android:paddingStart="120dp"
            android:paddingTop="60dp"
            app:srcCompat="@drawable/brazodere_piernaizq_sinfondo"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/piernaIzq"
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:layout_marginStart="166dp"
            android:layout_marginTop="118dp"
            android:paddingStart="101dp"
            android:paddingTop="90dp"
            app:srcCompat="@drawable/brazodere_piernaizq_sinfondo"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/piernaDer"
            android:layout_width="172dp"
            android:layout_height="148dp"
            android:layout_marginStart="193dp"
            android:layout_marginTop="118dp"
            android:paddingStart="121dp"
            android:paddingTop="90dp"
            app:srcCompat="@drawable/brazoizq_piernadere_sinfondo"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/palabras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

    <GridView
        android:id="@+id/letras"
        android:layout_width="374dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:background="#BAD5D2"
        android:horizontalSpacing="5dp"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />
    <Button
        android:id="@+id/buttonJugarDeNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tahitisansd"
        android:onClick="onClickJugarDeNuevo"
        android:text="Nuevo Juego"
        android:layout_gravity="center"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.34" />

</LinearLayout>